{
  "mcpServers": {
    "github": {
      "command": "github-mcp",
      "args": [],
      "env": {
        "GITHUB_TOKEN": "${{ env.GITHUB_MCP_PAT }}"
      }
    },
    "context7": {
      "command": "context7-mcp",
      "args": [],
      "env": {}
    },
    "XcodeBuildMCP": {
      "command": "node",
      "args": ["xcodebuildmcp"]
    }
  },
  "tools": [
    { "server": "github", "name": "fs.read" },
    { "server": "github", "name": "fs.write" },
    { "server": "github", "name": "git.createPullRequest" },
    { "server": "github", "name": "git.commentPR" },
    { "server": "context7", "name": "knowledge.search" },
    { "server": "context7", "name": "rubric.apply" }
  ],
  "policies": {
    "maxTokens": 4000,
    "allowShell": false,
    "requirePRs": true
  }
}
